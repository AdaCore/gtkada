OBJ_DIR          = obj
SONAME           = libgtkada_glade-$(MAJOR).$(MINOR)$(SO_EXT).$(MICRO)
LIBNAME          = libgtkada_glade$(SO_EXT)
ARCHIVENAME      = libgtkada_glade.a
LIBGLADE_SOURCES = glade.adb glade-xml.adb
LIBGLADE_OBJECTS = glade.o glade-xml.o
EXTERNAL_LIBS    = @LIBGLADE_LIBS@
GPRFILE          = glade
SRC_FILES        = ${LIBGLADE_OBJECTS}
include ../Makefile.common

## These cannot be shared in Makefile.common, since relative paths might be
## generated for configure (../install-sh), or absolute paths (/usr/bin/install)
INSTALL         = @INSTALL@
INSTALL_DATA    = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT  = @INSTALL_SCRIPT@

ifneq ($(HAVE_LIBGLADE),True)
all:
install:
else
all:     module_all
install: module_install
endif

clean:     module_clean
distclean: module_distclean
