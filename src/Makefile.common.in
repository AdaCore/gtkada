CC = @CC@
FPIC = @FPIC@
PWD = $(shell pwd)

GNATFLAGS = -O2 -gnatn -gnatws
GNATFLAGS_DEVEL = -O2 -gnatay -gnatwae -g -gnatec=$(PWD)/gnat.adc

GNATMAKE = gnatmake
OS_SPECIFIC_LINK_OPTIONS = @OS_SPECIFIC_LINK_OPTIONS@
BUILD_SHARED = @BUILD_SHARED@
SO_EXT   = @SO_EXT@
SO_OPTS  = @SO_OPTS@
MAJOR    = @GTKADA_MAJOR_VERSION@
MINOR    = @GTKADA_MINOR_VERSION@
MICRO    = @GTKADA_MICRO_VERSION@
GTK_LIBS = @GTK_LIBS@
HAVE_LIBGLADE = @HAVE_LIBGLADE@
HAVE_OPENGL   = @HAVE_OPENGL@
HAVE_GNOME    = @HAVE_GNOME@
INSTALL       = @INSTALL@
INSTALL_DATA  = @INSTALL_DATA@

CP = cp -p -f
LN = ln -f -s
CHMOD = chmod
ARFLAGS = cr

RANLIB = @RANLIB@

prefix        = @prefix@
exec_prefix   = $(prefix)
bindir        = $(prefix)/bin
libdir        = $(prefix)/lib
incdir        = $(prefix)/include/gtkada
alidir        = $(prefix)/lib/gtkada
