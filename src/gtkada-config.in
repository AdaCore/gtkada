#!/bin/sh
# @configure_input@

prefix=@prefix@

gtk_libs="@GTK_LIBS@"
gtkada_libs="-largs -L@prefix@/include/gtkada -L@prefix@/lib"
gtkada_cflags="-I@prefix@/include/gtkada"

usage()
{
        cat <<EOF
Usage: gtkada-config [OPTIONS]
Options:
        [--prefix]
        [--version|-v]
        [--libs]
        [--cflags]
        [--help|-h]
EOF
        exit $1
}

if test $# -eq 0; then
      echo $gtkada_cflags $gtkada_libs @GTK_LIBS@ -lgtkada
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --help|-h)
      usage 1>&2
      exit 1
      ;;
    --prefix)
      echo $prefix
      ;;
    --version|-v)
      echo @GTKADA_VERSION@
      exit 1
      ;;
    --libs)
      echo $gtkada_libs $gtk_libs -lgtkada
      ;;
    --cflags)
      echo $gtkada_cflags
      ;;
    *)
      usage 1>&2
      exit 1
      ;;
  esac
  shift
done

