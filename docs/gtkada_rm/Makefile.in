prefix = @prefix@
docdir = $(prefix)/share/doc/gtkada/gtkada_rm

MKDIR = mkdir -p
CP=cp -p
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

SRC=../../src/*.ads ../../src/opengl/*.ads ../../src/glade/*.ads

gtkada_rm: docgen docgen_clean

docgen:
	$(MKDIR) gtkada_rm
	gprbuild -Pgenerate_docs.gpr
	gps -Pgenerate_docs.gpr  --load=python:docgen_gtkada.py
	cat log.txt

docgen_clean:
	$(RM) -rf log.txt doc_obj/*

install:
	-$(MKDIR) $(docdir)
	-for i in gtkada_rm/*; \
	do \
	  $(INSTALL_DATA) $$i $(docdir); \
	done

clean: docgen_clean
	$(RM) generated.texi generated_menu.texi
	$(RM) -rf gtkada_rm/

distclean: clean
	-$(RM) Makefile

force:
