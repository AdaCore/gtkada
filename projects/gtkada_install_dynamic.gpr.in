--  Project file used by the InstallShield to build the GtkAda shared
--  library on Windows.

project GtkAda_Install_Dynamic is

   for Source_Dirs use (".");
   for Library_Dir use "../../bin";
   for Library_ALI_Dir use "../../lib/gtkada";
   for Library_Kind use "relocatable";
   for Library_Name use "libgtkada-@GTKADA_MAJOR_VERSION@.@GTKADA_MINOR_VERSION@";
   for Library_Options use ("-L.", "-L../../bin", "-L../../lib",
        "-lgtkada_c",
        "-lgtk-win32-2.0",
        "-lgdk-win32-2.0",
        "-latk-1.0",
        "-lgdk_pixbuf-2.0",
        "-lpangowin32-1.0",
        "-lgdi32",
        "-lpangocairo-1.0",
        "-lpango-1.0",
        "-ljpeg",
        "-lpng",
        "-lcairo",
        "-lgobject-2.0",
        "-lgmodule-2.0",
        "-lglib-2.0",
        "-lintl",
        "-liconv",
        "-luser32");

   package Compiler is
      for Default_Switches ("Ada") use ("-O2");
   end Compiler;

end GtkAda_Install_Dynamic;
